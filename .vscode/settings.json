{
    "files.exclude": {
        "**/.git/": true,
        "**/node_modules": false,
    },
    "search.exclude": {
        ".vscode": true,
        "vendor": true,
        "wp-content/!(themes)": true,
        "wp-content/themes/twenty*": true,
        "wp-content/themes/index.php": true,
        "**/assets": true,
        "**/dist": true,
        "**/gulp": true,
        "**/languages": true,
        "**/node_modules": true,
        "**/.browserslistrc": true,
        "**/.env": true,
        "**/.env.sample": true,
        "**/.gitignore": true,
        "**/gulpfile.js": true,
        "composer.json": true,
        "composer.lock": true,
        "docker-compose.yaml": true,
        "pods-package.json": true,
        "**/package.json": true,
        "**/README.md": true,
        "**/yarn.lock": true,
    },
    "stylelint.validate": [
        "css",
        "less",
        "postcss",
        "scss",
        "sass",
    ],
    "stylelint.snippet": [
        "css",
        "less",
        "postcss",
        "scss",
        "sass",
    ],
}
